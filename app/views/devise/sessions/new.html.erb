<div class="wrapper">
  <div  class=" mt-5 mb-5_nav container d-flex justify-content-center flex-column">  
    <div class= "d-flex justify-content-center p-2">
      <h2>Log in</h2>
    </div>
    
    <div class= "p-2 input-grp">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= flash[:alert] if flash[:alert] %>
        <div class="mb-3">
          <%= f.label :login,class: "form-label" %>
          <%= f.text_field :login, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email/Phone" %>
        </div>
        
        <div class="mb-2">
          <%= f.label :password , class: "form-label"%>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control"  %>
        </div>
        <div class="d-flex justify-content-between">
          <% if devise_mapping.rememberable? %>
            <div  class="mb-2">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me , class: "form-label" %>
            </div>
          <% end %>
          <div >
            <%= link_to "Reset Password", new_user_password_path %>
          </div>
        </div>
        
        <div class="actions mb-3 d-flex justify-content-center">
          <%= f.submit  "Log in", class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
    <div class="d-flex justify-content-end">
      <div class="">
        <span class="me-1">Not a member? </span>
        <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-secondary btn-sm" %>
      </div>
    </div>
  </div>
</div>
